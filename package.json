{
  "name": "Mirror",
  "version": "1.0.0",
  "description": "A blog tool powered by github issues",
  "preferGlobal": "true",
  "bin": {
    "mirror": "./mirror.js"
  },
  "scripts": {
    "start": "webpack-dev-server --inline --hot",
    "build": "npm run clean && cross-env NODE_ENV=production webpack --progress && cp favicon.png dist && node zip.js && npm run release",
    "release": "npm run clean && cross-env NODE_ENV=npm webpack --progress && cp favicon.png dist",
    "clean": "rm -f -R dist build.js index.html"
  },
  "files": [
    "dist",
    "mirror.js"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/LoeiFy/Mirror.git"
  },
  "keywords": [
    "blog",
    "issues",
    "github",
    "graphql"
  ],
  "author": "LoeiFy@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LoeiFy/Mirror/issues"
  },
  "homepage": "https://github.com/LoeiFy/Mirror",
  "devDependencies": {
    "axios": "^0.16.2",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.0",
    "babel-preset-es2015": "^6.24.1",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "es6-promise": "^4.1.0",
    "github-markdown-css": "^2.8.0",
    "html-webpack-plugin": "^2.28.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-import": "^10.0.0",
    "postcss-loader": "^2.0.6",
    "smoothscroll-polyfill": "^0.3.5",
    "style-loader": "^0.18.2",
    "svg-inline-loader": "^0.7.1",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.5.0"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "fs-extra": "^3.0.1",
    "yamljs": "^0.2.10"
  }
}
